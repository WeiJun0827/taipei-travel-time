{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"airbnb-base"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-use-before-define": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-trailing-spaces": [
			"error"
		],
		"no-restricted-syntax": "off",
		"guard-for-in": "off",
		"no-await-in-loop": "off",
		"import/prefer-default-export": "off",
		"no-multi-str": "off",
		"max-classes-per-file": "off",
		"no-continue": "off",
		"eqeqeq": "off",
		"no-param-reassign": "off",
		"max-len": "off",
		"import/extensions": "off",
		"no-plusplus": "off"
	}
}